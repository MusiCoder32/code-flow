{
  "name": "simple-assistant",
  "displayName": "simpleAssistant",
  "description": "内置本地轻量级LLM（如TinyLlavma），实时分析用户代码上下文，支持切换云端LLM（如GPT-4/Claude），通过API混合增强推理精度",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-assistant.createProject",
        "title": "simpleAssistant:CreateProject"
      },
      {
        "command": "simple-assistant.config",
        "title": "simpleAssistant:Config"
      },
      {
        "command": "simpleAssistant.openSnippets",
        "title": "Simple Assistant: 打开 Snippets 配置"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "simpleAssistant.openSnippets",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Simple Assistant",
      "properties": {
        "simpleAssistant.snippetsConfig": {
          "type": "string",
          "default": "",
          "markdownDescription": "在这里管理片段。点击此链接打开配置文件：[打开 snippets.jsonc](command:simpleAssistant.openSnippets)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write --log-level log src/**/*.{js,json,tsx,css,scss,vue,html,ts}  ",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "husky": "9.0.11",
    "prettier": "3.3.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "onnxruntime-node": "^1.22.0-rev",
    "vectra": "^0.11.1"
  },
  "volta": {
    "node": "20.19.0"
  }
}
