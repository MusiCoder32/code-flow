{
  "name": "simple-assitant",
  "displayName": "CodeFlow",
  "description": "内置本地轻量级LLM（如TinyLlavma），实时分析用户代码上下文，支持切换云端LLM（如GPT-4/Claude），通过API混合增强推理精度",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-assitant.createProject",
        "title": "CodeFlow:CreateProject"
      },
      {
        "command": "simple-assitant.config",
        "title": "CodeFlow:Config"
      }
    ],
    "configuration": {
      "title": "Code Flow Inline Suggestions",
      "properties": {
        "simple-assitant.inline.minPrefix": {
          "type": "number",
          "default": 3,
          "description": "最小前缀有效字符数(去除符号/空白)后才触发内联补全"
        },
        "simple-assitant.inline.pauseMs": {
          "type": "number",
          "default": 1000,
          "description": "用户停止输入多少毫秒后再进行检索"
        },
        "simple-assitant.inline.throttleMs": {
          "type": "number",
          "default": 2000,
          "description": "两次真实检索的最小间隔"
        },
        "simple-assitant.inline.maxLines": {
          "type": "number",
          "default": 12,
          "description": "单次内联建议截断的最大行数"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write --log-level log src/**/*.{js,json,tsx,css,scss,vue,html,ts}  ",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "husky": "9.0.11",
    "prettier": "3.3.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "onnxruntime-node": "^1.22.0-rev",
    "vectra": "^0.11.1"
  },
  "volta": {
    "node": "20.19.0"
  }
}
